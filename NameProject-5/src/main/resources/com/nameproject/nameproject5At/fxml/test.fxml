<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="20">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>

  <HBox spacing="10">
    <!-- 开始按钮 -->
    <Button text="开始" onAction="#handleStart" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 0;">
      <HBox.margin>
        <Insets/>
      </HBox.margin>
    </Button>

    <!-- 停止按钮 -->
    <Button text="停止" onAction="#handleStop" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-background-radius: 0;">
      <HBox.margin>
        <Insets/>
      </HBox.margin>
    </Button>
  </HBox>
</VBox>